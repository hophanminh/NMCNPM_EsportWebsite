
<div id="logreg-forms">
    {{#if errors}}
        <p class="alert alert-danger">
        {{#each errors }}
            {{this.msg}} <br>
        {{/each}}
        </p>
    {{/if}}

    <form class="form-signup" method="POST" >
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign up</h1>        

        <input type="text"     id="user-name"      name="username" class="form-control" placeholder="Tên đăng nhập" required=""  value="{{saveForm.username}}" autofocus="">
        <input type="text"     id="user-email"     name="email" class="form-control" placeholder="Email" required="" value="{{saveForm.email}}">
        <input type="password" id="user-pass"      name="f_password" class="form-control" placeholder="Mật khẩu" required="">
        <input type="password" id="user-rpass"     name="f_rpassword" class="form-control" placeholder="Nhập lại mật khẩu" required="">

        <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-user-plus"></i> Sign Up</button>
    </form>
    <br>
</div>