{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">

{{/section}}

{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $('.dateF').datetimepicker({
        // format: 'd/m/Y H:i'
        format: 'd/m/Y',
        timepicker: false,
        mask: true,
    });

    function dateValid(){
        const startDate = $("input[name=startDate_raw]").val();
        const endDate = $("input[name=endDate_raw]").val();
        
        if(startDate > endDate)
        {
            Swal.fire();
            return false;
        }
        return true;
    }

    Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Date start go after date end',
        footer: 'You need to check Start Date and End Date'
    })

</script>
{{/section}}

<div class="container border border-white  text-dark"
    style="margin-top: 30px; background-image: linear-gradient(rgb(255, 255, 255) 30%, rgb(35, 146, 236) 60%);">

    <div id="backgroundTournament" class="carousel slide m-5" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#backgroundTournament" data-slide-to="0" class="active"></li>
            <li data-target="#backgroundTournament" data-slide-to="1"></li>
            <li data-target="#backgroundTournament" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            <div class="carousel-item active">
                <!-- <img src="add.jpg" class="d-block w-100" alt="..." width="30%" height="350px"> -->
                <button type="button" class="btn text-center" style="background-image: url(img/add.jpg); width: 100%; height:350px; 
                    font-weight: bold;font-size: xx-large;">+ BACKGROUND OF TOURNAMENT</button>
            </div>
            <div class="carousel-item">
                <img src="img/tour1.jpg" class="d-block w-100" alt="..." height="350px">
            </div>
            <div class="carousel-item">
                <img src="img/tour2.jpg" class="d-block w-100" alt="..." height="350px">
            </div>
            <div class="carousel-item">
                <img src="img/tour3.jpg" class="d-block w-100" alt="..." height="350px">
            </div>
        </div>
        <a class="carousel-control-prev" href="#backgroundTournament" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#backgroundTournament" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="POST" onsubmit="return dateValid();">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="nameTournament">Tournament name</label>
                            <input type="text" class="form-control" id="nameTournament" name="nameTournament" required>
                        </div>
                        <div class="col">
                            <label for="prizeTournament">Total Prize</label>
                            <input type="text" class="form-control" id="prizeTournament" name="prizeTournament" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="date">Start Date</label>
                            <input type="text" class="form-control dateF" id="date" name="startDate_raw" required>
                        </div>
                        <div class="col">
                             <label for="date">End Date</label>
                            <input type="text" class="form-control dateF" id="date" name="endDate_raw" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Rule">Rule</label>
                    <textarea class="form-control bg-transparent " aria-label="With textarea" name="Rule"></textarea>
                </div>
                <div class="form-group">
                    <label for="TinyDes">Brief Description</label>
                    <textarea class="form-control bg-transparent " aria-label="With textarea" id="TinyDes" name="TinyDescription"></textarea>
                </div>
                <div class="form-group">
                    <label for="FullDes">Full Description</label>
                    <textarea class="form-control bg-transparent " aria-label="With textarea" id="FulDes" name="FullDescription"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success" value="SUBMIT" formaction="/tournament">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    Create
                </button>
            </form>
        </div>
    </div>
</div>