
  <div id="logreg-forms">

    {{#if err_message}}
        <p class="alert alert-danger">{{err_message}}</p>
    {{/if}} 

    <form class="form-signin" method="POST">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
        <hr>
        <input type="text"     id="inputName"     name="username" class="form-control" placeholder="Tên đăng nhập" required=""  value="{{saveForm.username}}" autofocus="">
